# API Configuration
BASE_URL="https://www.deribit.com/api/v2"
CLIENT_ID_1="your_client_id"
CLIENT_SECRET_1="your_client_secret"

# AWS Configuration
S3_BUCKET="your_s3_bucket_name"
S3_PREFIX="options-data"

# Application Settings
SNAPSHOT_INTERVAL=60  # Interval between snapshots in seconds
MAX_CHANNELS_PER_CONN=500  # Maximum WebSocket channels per connection
HEARTBEAT_INTERVAL=30  # WebSocket heartbeat interval in seconds
DAILY_REFRESH_HOUR=8  # UTC hour for daily instrument refresh

# Local Development Settings
LOCAL_DATA_PATH="./local_data"  # Local data storage path
LOCAL_SNAPSHOT_INTERVAL=60  # Local testing snapshot interval

# EC2 Production Settings
EC2_LOG_PATH="/var/log/options-collector/collector.log"
EC2_TEMP_PATH="/tmp/options-collector"
EC2_CONFIG_PATH="/etc/options-collector/config.yaml"